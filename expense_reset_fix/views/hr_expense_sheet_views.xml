<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_hr_expense_sheet_form_inherit_reset_fix" model="ir.ui.view">
        <field name="name">hr.expense.sheet.form.inherit.reset.fix</field>
        <field name="model">hr.expense.sheet</field>
        <field name="inherit_id" ref="hr_expense.view_hr_expense_sheet_form"/>
        <field name="arch" type="xml">
            <!-- Replace the existing button to ensure we control visibility and avoid duplicates -->
            <xpath expr="//button[@name='action_reset_expense_sheets']" position="replace">
                <button name="action_reset_expense_sheets" string="Reset to Draft" type="object" invisible="state not in ('post', 'done')" data-hotkey="r"/>
            </xpath>
        </field>
    </record>
</odoo>
